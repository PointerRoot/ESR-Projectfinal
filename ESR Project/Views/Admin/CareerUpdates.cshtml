<head>
    <title></title>
    <script type="text/javascript" src="../../Content/ProjectFiles/AdminView/Careers/UpdateCareers.js"></script>
</head>
<style>
    .blackiconcolor {
        color: red;
    }

        .blackiconcolor:hover {
            color: brown;
        }
</style>
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper" style="min-height:900px;">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Career
            <small>Update</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active">Career - Update</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <!-- Small boxes (Stat box) -->
        <div class="row">
            <div class="col-lg-3 col-xs-6">
                <!-- small box -->
                <div class="small-box bg-aqua">
                    <div class="inner">
                        <h3 id="UsersCounth3Div">@ViewBag.UsersCount</h3>
                        <p>Total Users</p>
                    </div>
                    <div class="icon">
                        <i class="fa fa fa-users"></i>
                    </div>
                    <a href="#/" onclick="myFunctionSwapView('Clients_Details');" class="small-box-footer">More info <i class="fa fa-arrow-circle-right"></i></a>
                </div>
            </div>
            <div class="col-lg-3 col-xs-6">
                <!-- small box -->
                <div class="small-box bg-primary">
                    <div class="inner">
                        <h3 id="ClientsCounth3Div">@ViewBag.ClientsCount</h3>
                        <p>Total Clients</p>
                    </div>
                    <div class="icon">
                        <i class="fa fa fa-user"></i>
                    </div>
                    <a href="#/" onclick="myFunctionSwapView('Clietns_Details');" class="small-box-footer">More info <i class="fa fa-arrow-circle-right"></i></a>
                </div>
            </div>
            <div class="col-lg-3 col-xs-6">
                <!-- small box -->
                <div class="small-box bg-red">
                    <div class="inner">
                        <h3 id="PakagesCounth3Div">@ViewBag.PakagesCount</h3>
                        <p>Total Pakages</p>
                    </div>
                    <div class="icon">
                        <i class="fa fa fa-file-text "></i>
                    </div>
                    <a href="#/" onclick="myFunctionSwapView('Pakages_Details');" class="small-box-footer">More info <i class="fa fa-arrow-circle-right"></i></a>
                </div>
            </div>

            <div class="col-lg-3 col-xs-6">
                <!-- small box -->
                <div class="small-box bg-green">
                    <div class="inner">
                        <h3 id="EventsCounth3Div">@ViewBag.EventsCount</h3>
                        <p>Total Events</p>
                    </div>
                    <div class="icon">
                        <i class="fa fa fa-camera"></i>
                    </div>
                    <a href="#/" onclick="myFunctionSwapView('Events_Details');" class="small-box-footer">More info <i class="fa fa-arrow-circle-right"></i></a>
                </div>
            </div>
        </div>
        <!-- /.row -->
        <!-- Main row -->
          <div class="row">
            <!-- Add Career -->
            <section class="col-lg-12 connectedSortable">
                <div id="signupbox" class="mainbox">
                    <div class="panel panel-info">
                        <div class="panel-heading">
                            <div class="panel-title">Update Career</div>
                        </div>
                        <div class="panel-body">
                            <form id="Careerform" action="#/" method="post" onsubmit="return UpdateCareerForm()" class="form-horizontal" role="form">
                                <div class="form-group" hidden>
                                        <input type="text" class="form-control" id="CareerId" hidden>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-3 control-label">Position Title*</label>
                                    <div class="col-md-9">
                                        <input type="text" class="form-control" maxlength="50" id="CareerName" required placeholder="Enter Position title Here!">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-3 control-label">Resposibities</label>
                                    <div class="col-md-9">
                                        <input type="text" class="form-control" id="CareerRespomsibilties" placeholder="Enter Resposibilities">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-3 control-label">Requirment</label>
                                    <div class="col-md-9">
                                        <input type="text" class="form-control" id="CareerRequirement" placeholder="Enter Requirment Here!">
                                    </div>
                                </div>

                                <div class="form-group">
                                    <!-- Button -->
                                    <div class="col-md-offset-3 col-md-9">
                                        <button id="BtnCareer" type="submit" class="btn btn-success"><i class="icon-hand-right"></i> &nbsp Submit</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </section>
            <!-- Add Career -->
        </div>
    </section>
    <!-- /.content -->
</div>

